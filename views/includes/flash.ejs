<% if(success && success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3 flash"
  id="success-alert"
  role="alert"
  style="transition: opacity 1s ease"
>
  <%= success %>
</div>
<% } %> <% if(error && error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show col-6 offset-3 flash"
  id="error-alert"
  role="alert"
  style="transition: opacity 1s ease"
>
  <%= error %>
</div>
<% } %>
<script src="/javascript/flash.js"></script>
