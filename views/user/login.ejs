<% layout("layouts/boilerplate") %> 
<div class="row">
    <div class="col-6 offset-3">
        <h1>login your account</h1>
        <form action="/login" method="post" novalidate class="needs-validation">
            <!-- username Field -->
        <div class="mb-2">
            <label for="Username" class="form-label">username:</label>
            <input
              type="text"
              id="username"
              name="username"
              class="form-control"
              required
            />
            <!-- Validation Feedback -->
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter the username.</div>
          </div>
          <div class="mb-2">
            <label for="password" class="form-label">password:</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the password.</div>
            <button class="btn btn-success btn-styled mt-3">Login</button>

          </div>

        </form>
    </div>
</div>