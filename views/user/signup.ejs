<% layout("layouts/boilerplate") %> 
<div class="row">
    <div class="col-6 offset-3">
        <h1>signUp on wandurlust</h1>
        <form action="/signup" method="post" novalidate class="needs-validation">
            <!-- username Field -->
        <div class="mb-2">
            <label for="Username" class="form-label">username:</label>
            <input
              type="text"
              id="username"
              name="username"
              class="form-control"
              required
            />
            <!-- Validation Feedback -->
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter the username.</div>
          </div>
            <!-- email Field -->

          <div class="mb-2">
            <label for="emial" class="form-label">emial:</label>
            <input
              type="email"
              id="emial"
              name="email"
              class="form-control"
              required
            />
            <!-- Validation Feedback -->
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter the emial.</div>
          </div>
          <!-- password Field -->
          <div class="mb-2">
            <label for="password" class="form-label">password:</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the password.</div>
            <button class="btn btn-success btn-styled mt-3">Sign Up</button>

          </div>

        </form>
    </div>
</div>
